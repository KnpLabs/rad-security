{
    "name": "knplabs/rad-security",
    "description": "Provide RAD security components",
    "license": "MIT",
    "authors": [
        {
            "name": "KNP Labs",
            "email": "hello@knplabs.com"
        }
    ],
    "require": {
        "symfony/security": "~2.6||~3.0"
    },
    "require-dev": {
        "php": "~7.0",
        "bossa/phpspec2-expect": "~1.0",
        "pedrotroller/php-cs-custom-fixer": "~1.4.0",
        "phpspec/phpspec": "~2.4",
        "symfony/dependency-injection": "~2.6||~3.0",
        "symfony/event-dispatcher": "~2.6||~3.0",
        "symfony/routing": "~2.6||~3.0"
    },
    "suggest": {
        "knplabs/rad-resource-resolver": "Allows to check authorization against resources resolved from the routing."
    },
    "autoload": {
        "psr-4": {
            "Knp\\Rad\\Security\\": "src/Knp/Rad/Security/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
